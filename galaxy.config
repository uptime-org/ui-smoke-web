# UI tier base template configuration
# These sync patterns define which files are Galaxy-managed vs user-owned

sync_patterns:
  galaxy_infrastructure:
    - "next.config.js"
    - "src/app/api/health/route.ts"
    - "src/app/api/galaxy/info/route.ts"
    - "src/app/api/galaxy/root/route.ts"
    - "src/app/api/galaxy/dependencies/route.ts"
    - "Dockerfile"
    - "build.sh"
    - "helm/*"
    - ".galaxy/*"
    - ".github/workflows/deploy.yml"
  user_owned:
    - "package.json"
    - "next.config.custom.js"
    - "README.md"
    - ".gitignore"